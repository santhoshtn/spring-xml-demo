<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Thalaiva"></constructor-arg>
        <constructor-arg name="gender" value="Male" ></constructor-arg>
        <constructor-arg name="age" value="35" ></constructor-arg>
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Rajnikanth"></constructor-arg>
        <constructor-arg name="gender" value="Male" ></constructor-arg>
        <constructor-arg name="age" value="55" ></constructor-arg>
    </bean>
    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Rajkumar"></constructor-arg>
        <constructor-arg name="gender" value="Male" ></constructor-arg>
        <constructor-arg name="age" value="75" ></constructor-arg>
    </bean>

    <bean name="movie1" class="com.stackroute.domain.Movie" >
        <constructor-arg name="actor" ref="actor1" ></constructor-arg>
    </bean>
    <bean id="movie2" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor2" ></constructor-arg>
    </bean>
    <bean id="movie3" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor3" ></constructor-arg>
    </bean>

</beans>